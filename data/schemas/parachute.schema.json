{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Parachute Configuration Schema",
    "type": "object",
    "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
            "type": "object",
            "required": ["name", "diameter", "Cd", "material", "deployment"],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Nombre del paracaídas"
                },
                "diameter": {
                    "type": "number",
                    "description": "Diámetro del paracaídas [m]",
                    "minimum": 0.1
                },
                "Cd": {
                    "type": "number",
                    "description": "Coeficiente de arrastre [-]",
                    "minimum": 0.1,
                    "maximum": 2.5
                },
                "material": {
                    "type": "string",
                    "enum": ["ripstop_nylon", "silnylon", "kevlar"],
                    "description": "Material del paracaídas"
                },
                "deployment": {
                    "type": "object",
                    "required": ["altitude", "min_velocity", "max_velocity", "deployment_time"],
                    "properties": {
                        "altitude": {
                            "type": "number",
                            "description": "Altitud de despliegue [m]",
                            "minimum": 0
                        },
                        "min_velocity": {
                            "type": "number",
                            "description": "Velocidad mínima segura [m/s]",
                            "minimum": 0
                        },
                        "max_velocity": {
                            "type": "number",
                            "description": "Velocidad máxima segura [m/s]",
                            "minimum": 0
                        },
                        "deployment_time": {
                            "type": "number",
                            "description": "Tiempo de despliegue [s]",
                            "minimum": 0.1,
                            "maximum": 2.0
                        }
                    }
                }
            }
        }
    }
}